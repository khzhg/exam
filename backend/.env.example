# 生产环境配置示例
# 复制此文件为 .env 并根据实际情况修改

# 服务端口
PORT=3001

# 数据库路径 (生产环境使用绝对路径或相对于项目根目录的路径)
DB_PATH=../database/exam.db

# JWT密钥 (生产环境必须更改为复杂的随机字符串)
JWT_SECRET=your-production-super-secret-jwt-key-please-change-this

# Token过期时间
JWT_EXPIRE=24h

# 密码加密轮数
BCRYPT_ROUNDS=12

# 文件上传大小限制 (5MB)
MAX_FILE_SIZE=5242880

# 文件上传路径
UPLOAD_PATH=./uploads

# 数据库备份路径 (可选)
BACKUP_PATH=./backups

# 日志级别 (development: debug, production: info)
LOG_LEVEL=info

# 是否启用HTTPS (生产环境建议启用)
ENABLE_HTTPS=false

# HTTPS证书路径 (如果启用HTTPS)
HTTPS_KEY_PATH=
HTTPS_CERT_PATH=
