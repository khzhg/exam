{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "一键安装所有依赖",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"detail": "使用 workspace 管理，根目录统一安装所有依赖"
		},
		{
			"label": "启动开发环境 (前后端)",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "启动后端服务",
			"type": "shell",
			"command": "npm",
			"args": ["run", "backend"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "启动前端服务",
			"type": "shell",
			"command": "npm",
			"args": ["run", "frontend"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "构建前端应用",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": []
		}
	]
}